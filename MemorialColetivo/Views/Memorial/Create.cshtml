@model Memorial

@{
    ViewData["Title"] = "Crie um novo memorial";
}

<div class="row text">
    <div class="col-md-8 offset-2">
        <p>
            <h1>Crie um novo memorial</h1>
        </p>
        <div class="row">
            <div class="col-md-8 offset-2">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group text-center">
                        <img id="ProfilePicturePreview" />
                    </div>
                    <div class="form-group">
                        <label asp-for="MemorialPictureURL" class="control-label"></label>
                        <input asp-for="MemorialPictureURL" class="form-control" ;>
                        <span asp-validation-for="MemorialPictureURL" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Name" class="control-label"></label>
                        <input asp-for="Name" class="form-control" ;>
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Historia" class="control-label"></label>
                        <input asp-for="Historia" class="form-control" ;>
                        <span asp-validation-for="Historia" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="DataFalecimento" class="control-label"></label>
                        <input asp-for="DataFalecimento" class="form-control" ;>
                        <span asp-validation-for="DataFalecimento" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Formacao" class="control-label"></label>
                        <input asp-for="Formacao" class="form-control" ;>
                        <span asp-validation-for="Formacao" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Religiao" class="control-label"></label>
                        <input asp-for="Religiao" class="form-control" ;>
                        <span asp-validation-for="Religiao" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Hobbies" class="control-label"></label>
                        <input asp-for="Hobbies" class="form-control" ;>
                        <span asp-validation-for="Hobbies" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Create" class="btn btn-outline-success float-right" />
                        <a class="btn btn-outline-secondary" asp-action="Index">Mostre todos</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
@section Scripts{
    <script>
        $("#MemorialPictureURL").on("change", function () {
            var output = document.getElementById('ProfilePicturePreview');
            output.src = $(this).val();
        })
    </script>
}