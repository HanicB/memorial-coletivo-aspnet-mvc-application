@model Memorial

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Editar Perfil</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" integrity="sha384-B4gt1jrGC7Jh4AgTPSdUtOBvfO8sh+WyUEHsmsLlqLs2tnGdC5l/rh2v9tJZhZ9w" crossorigin="anonymous">
    <!-- Adicione outros estilos conforme necessário -->
    <style>
        body {
            background-color: #f8f9fa;
        }

        .center-div {
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
        }

        .profile-container {
            width: 80%;
            max-width: 600px;
            background-color: #fff;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            border-radius: 10px;
            padding: 20px;
            text-align: center;
        }

        .profile-image {
            width: 125px;
            height: 125px;
            border-radius: 50%;
            overflow: hidden;
            margin: 0 auto 20px; /* Centraliza a imagem verticalmente e adiciona margem na parte inferior */
        }

            .profile-image img {
                width: 100%;
                height: 100%;
                object-fit: cover;
            }

        .edit-profile-heading {
            font-size: 36px;
            font-family: Inter, sans-serif;
            font-weight: 400;
            margin-bottom: 20px;
        }

        .follow-info {
            font-size: 24px;
            font-family: Inter, sans-serif;
            font-weight: 400;
            margin-top: 10px;
        }

        .memorial-list {
            margin-top: 20px;
        }

        .memorial-item {
            font-size: 18px;
            font-family: Inter, sans-serif;
            font-weight: 400;
            margin-bottom: 10px;
        }

        /* Botões de cores */
        .color-buttons {
            margin-top: 20px;
        }

        .color-button {
            width: 30px;
            height: 30px;
            border-radius: 50%;
            margin-right: 10px;
            cursor: pointer;
            background-color: #ccc; /* Cor de fundo padrão, pode ser ajustada conforme necessário */
            display: inline-block;
        }

        .change-color {
            transition: background-color 0.3s ease;
        }

        .blue-color .change-color {
            background-color: blue !important;
        }

        .red-color .change-color {
            background-color: red !important;
        }

        .yellow-color .change-color {
            background-color: yellow !important;
        }

        .reset-button {
            margin-top: 25px;
        }
    </style>
</head>
<body>
    <div class="center-div">
        <div class="profile-container">
            <!-- Botões de cores -->
            <div class="color-buttons">
                <div class="color-button" onclick="changeColor('blue')"></div>
                <div class="color-button" onclick="changeColor('red')"></div>
                <div class="color-button" onclick="changeColor('yellow')"></div>
                <!-- Adicione mais botões conforme necessário -->
            </div>
            <button class="btn btn-outline-secondary reset-button" onclick="resetColor()"><i class="bi bi-arrow-repeat"></i> Resetar Cores</button>
            <!-- Restante do conteúdo -->
            <div class="profile-image">
                <img src="https://dotnethow.net/images/actors/actor-5.jpeg" alt="Profile Image">
            </div>
            <div class="edit-profile-heading change-color">Will</div>
            <div class="follow-info">55 anos</div>
            <div class="follow-info">Não segue nenhum memorial</div>
            <div class="follow-info">Responsável pelo memorial de: Aly</div>
            <a href="" class="btn btn-outline-primary change-color" style="margin-top:25px;"><i class="bi bi-pencil-square"></i>Editar perfil</a>
        </div>
    </div>

    <!-- Adicione outros scripts conforme necessário -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@2.11.6/dist/umd/popper.min.js" integrity="sha384-b12n3kVUdFjmO6IPYl8v2wWqQZ8yVHW6HO4Bsce8xj1jgrvqwe1DB5M/1OQm8fGt" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js" integrity="sha384-B4gt1jrGC7Jh4AgTPSdUtOBvfO8sh+WyUEHsmsLlqLs2tnGdC5l/rh2v9tJZhZ9w" crossorigin="anonymous"></script>
    <script>
        // Função para definir a cor e armazenar no cookie
        function changeColor(color) {
            document.body.className = color + "-color";
            document.cookie = "chosenColor=" + color + "; path=/"; // Armazena a cor escolhida em um cookie
        }

        // Função para obter a cor armazenada no cookie
        function getChosenColor() {
            var match = document.cookie.match(new RegExp('(^| )chosenColor=([^;]+)'));
            return match ? match[2] : null;
        }

        // Função para resetar as cores
        function resetColor() {
            document.body.className = ""; // Remove a classe de cor
            document.cookie = "chosenColor=; expires=Thu, 01 Jan 1970 00:00:00 UTC; path=/"; // Remove o cookie de cor
        }

        // Define a cor armazenada, se existir
        var storedColor = getChosenColor();
        if (storedColor) {
            changeColor(storedColor);
        }
    </script>
</body>
</html>
